# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgres://postgres:postgres@localhost:5432/negative_space
DB_SSL=false
DB_LOGGING=true
DB_SYNC=true

# Security Configuration
JWT_SECRET=change_this_to_a_secure_secret_in_production
JWT_EXPIRES_IN=1d
BCRYPT_SALT_ROUNDS=12
COOKIE_SECRET=change_this_to_a_secure_cookie_secret_in_production
CSRF_ENABLED=true


# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Database Pooling
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Encryption
ENCRYPTION_KEY=your-256-bit-encryption-key

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=logs
LOG_FILENAME=app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# File Storage Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/tiff,application/dicom

# Negative Space Imaging Configuration
DEFAULT_ALGORITHM=advanced
MAX_IMAGE_DIMENSION=4096
PROCESSING_TIMEOUT=30000
ENABLE_GPU=false
CACHE_TTL=86400

# HIPAA Compliance Configuration
HIPAA_ENABLED=true
DATA_ENCRYPTION=true
AUDIT_LOG_ENABLED=true
AUTO_LOGOUT=900000
