{
    "update_interval": 1.0,
    "metrics": {
        "cpu": {
            "warning_threshold": 75.0,
            "critical_threshold": 90.0
        },
        "memory": {
            "warning_threshold": 75.0,
            "critical_threshold": 90.0
        },
        "disk": {
            "warning_threshold": 85.0,
            "critical_threshold": 95.0
        }
    },
    "log_rotation": {
        "max_files": 10,
        "max_size_mb": 100
    },
    "reporting": {
        "report_directory": "reports",
        "report_format": "txt",
        "metrics_history_days": 30
    },
    "alerts": {
        "email": {
            "enabled": false,
            "recipients": []
        },
        "desktop": {
            "enabled": true
        }
    }
}
